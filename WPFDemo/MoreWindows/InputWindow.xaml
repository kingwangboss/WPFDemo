<Window x:Class="MoreWindows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoreWindows"
        mc:Ignorable="d"
        Title="InputWindow" Height="150" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox Name="txtValue" Grid.ColumnSpan="2"></TextBox>
            <Button Name="btnOK" Margin="5" Content="确定" Grid.Row="1" Grid.Column="0" Click="btnOK_Click"></Button>
            <Button Name="btnCancel" Margin="5" Content="取消" Grid.Row="1" Grid.Column="1" Click="btnCancel_Click"></Button>
        </Grid>
    </Grid>
</Window>
