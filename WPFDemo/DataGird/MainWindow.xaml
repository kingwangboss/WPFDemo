<Window x:Class="DataGird.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGird"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>

        <DataGrid x:Name="dataGrid" AutoGenerateColumns="False" CanUserAddRows="False" HorizontalAlignment="Left" Margin="62,42,0,0" VerticalAlignment="Top" Height="239" Width="384">
               <DataGrid.Columns>
                   <DataGridTextColumn IsReadOnly="True" Binding="{Binding Name}" Header="姓名"></DataGridTextColumn>
                   <DataGridTextColumn Binding="{Binding Score}" Header="成绩"></DataGridTextColumn>
               </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
